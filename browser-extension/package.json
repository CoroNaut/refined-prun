{
  "name": "browser-extension",
  "description": "chrome extension",
  "private": true,
  "scripts": {
    "clean": "rimraf ../dist",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "dev": "pnpm build:watch",
    "dev:firefox": "pnpm build:firefox:watch",
    "test": "vitest run",
    "lint": "eslint ./ --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write --ignore-path ../.prettierignore",
    "type-check": "tsc --noEmit"
  },
  "type": "module",
  "dependencies": {
    "code-tag": "^1.2.0",
    "dom-chef": "^5.1.1",
    "engine.io-parser": "^5.2.3",
    "math-expression-evaluator": "^2.0.5",
    "one-mutation": "^3.0.0",
    "onetime": "^7.0.0",
    "plotly.js-dist-min": "^2.30.1",
    "select-dom": "^9.0.0",
    "socket.io-parser": "^4.2.4",
    "type-fest": "^4.21.0",
    "typed-query-selector": "^2.11.2",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@laynezh/vite-plugin-lib-assets": "^0.5.23",
    "@refined-prun/hmr": "workspace:*",
    "@refined-prun/tsconfig": "workspace:*",
    "@types/chrome": "^0.0.268",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/plotly.js-dist-min": "^2.3.4",
    "@types/socket.io-parser": "^3.0.0"
  }
}
