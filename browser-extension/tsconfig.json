{
  "extends": "@refined-prun/tsconfig/app.json",
  "compilerOptions": {
    "module": "es2022",
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "types": ["vite/client", "node"],
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
      "react-dom": ["./node_modules/preact/compat/"],
      "react-dom/*": ["./node_modules/preact/compat/*"]
    }
  },
  "include": ["src", "dev-tools", "vite.config.mts", "node_modules/@types"]
}
