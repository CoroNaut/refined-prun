{
  "extends": "@refined-prun/tsconfig/app.json",
  "compilerOptions": {
    "module": "es2022",
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "DocumentFragment",
    "types": ["vite/client", "node"],
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "dev-tools", "vite.config.mts", "node_modules/@types"]
}
