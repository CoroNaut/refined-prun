{
  "extends": ["@refined-prun/tsconfig/app.json", "@vue/tsconfig/tsconfig.dom.json"],
  "compilerOptions": {
    "baseUrl": "./",
    "verbatimModuleSyntax": false,
    "types": ["vite/client", "node"],
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "~/*": ["src/assets/*"]
    },
    "lib": [
      "DOM",
      "WebWorker",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "vite.config.mts",
    "node_modules/@types"
  ]
}
