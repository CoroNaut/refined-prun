{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "version": "1",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://apex.prosperousuniverse.com/"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://apex.prosperousuniverse.com/*"
      ],
      "js": [
        "refined-prun-prepare.js",
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "*.svg",
        "*.json",
        "*.woff2",
        "*.ttf"
      ],
      "matches": [
        "https://apex.prosperousuniverse.com/*"
      ]
    }
  ]
}
